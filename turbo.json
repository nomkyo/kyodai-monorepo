{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["VSCODE_INSPECTOR_OPTIONS"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "dotEnv": ["apps/backend/.env.example"]
    },
    "test": {
      "dependsOn": ["test-env"]
    },
    "test-env": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["test-env"]
    },
    "format" : {}
  }
}
